# Environment variables template for multi-cloud infrastructure
# Copy this file to env.sh and replace with actual values
# DO NOT commit env.sh to git - it contains sensitive information

# AWS Configuration
export AWS_ACCESS_KEY_ID="your_aws_access_key_id"
export AWS_SECRET_ACCESS_KEY="your_aws_secret_access_key"
export AWS_DEFAULT_REGION="us-west-2"

# Cloudflare Configuration
export CLOUDFLARE_EMAIL="your_email@example.com"
export CLOUDFLARE_API_TOKEN="your_cloudflare_api_token"
export CLOUDFLARE_ZONE_ID="your_cloudflare_zone_id"
export CLOUDFLARE_ACCOUNT_ID="your_cloudflare_account_id"

# Oracle Cloud Configuration
export OCI_TENANCY_OCID="ocid1.tenancy.oc1..your_tenancy_ocid"
export OCI_REGION="us-sanjose-1"
export OCI_USER_OCID="ocid1.user.oc1..your_user_ocid"
export OCI_FINGERPRINT="your_oci_fingerprint"
export OCI_PRIVATE_KEY_PATH="/path/to/your/oci-private-key.pem"
export OCI_COMPARTMENT_ID="ocid1.compartment.oc1..your_compartment_id"

# Google Cloud Configuration
export GOOGLE_PROJECT_ID="your_gcp_project_id"
export GOOGLE_APPLICATION_CREDENTIALS="/path/to/your/google-credentials.json"
export GOOGLE_REGION="us-west1"
export GOOGLE_ZONE="us-west1-a"

# IBM Cloud Configuration
export IBMCLOUD_API_KEY="your_ibm_cloud_api_key"
export IBMCLOUD_RESOURCE_GROUP_ID="your_ibm_resource_group_id"
export IBMCLOUD_REGION="us-south"

# Docker Hub Configuration
export DOCKERHUB_USERNAME="your_dockerhub_username"
export DOCKERHUB_TOKEN="your_dockerhub_token"

# GoDaddy Configuration (for domain migration to Cloudflare Pages)
export GODADDY_API_KEY="your_godaddy_api_key"
export GODADDY_API_SECRET="your_godaddy_api_secret"
